<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShellAppExample.Reminders">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <StackLayout
                Orientation="Horizontal" 
                VerticalOptions="Start">
                <Label Text="Visit the dentist" />
                <CheckBox/>
            </StackLayout>

            <StackLayout
                Orientation="Horizontal" 
                VerticalOptions="Start">
                <Label Text="Do the weekly food shopping" />
                <CheckBox/>
            </StackLayout>

            <StackLayout
                Orientation="Horizontal" 
                VerticalOptions="Start">
                <Label Text="Call a car mechanic" />
                <CheckBox/>
            </StackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
